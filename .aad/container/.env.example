# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Git Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Git user name (for commits in container)
GIT_USER_NAME=Claude AI

# Git user email (for commits in container)
GIT_USER_EMAIL=claude@example.com

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Volume Mount Settings (Git worktree互換性)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# ホストのプロジェクトパス（Git worktree使用時に必須）
# 例: /Users/yourname/workspace/project
# このパスがコンテナ内にそのままマウントされます
# HOST_PROJECT_PATH=

# 注意事項:
# - Git worktreeを使用する場合、このパスを設定してください
# - worktreeの.gitファイルはホストの絶対パスを参照するため、
#   同一パスでマウントしないとgit操作が失敗します
# - 未設定の場合、デフォルト動作（../を/home/claude/workspaceにマウント）になります
#
# 使用例:
#   HOST_PROJECT_PATH=/Users/yourname/workspace/project docker-compose up

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Quality Gate Settings
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Minimum test coverage (70-100)
MIN_COVERAGE=80

# Lint strictness (strict/normal/lenient)
LINT_MODE=normal

